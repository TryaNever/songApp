{% extends 'layout/home-layout.html.twig' %}

{% block app %}
    <div class="flex h-screen items-center flex-col">
        <form method="post">
            <h3>Filtres</h3>
            <label for="titre">Titre</label>
            <input type="text" name="titre" id="titre" class="border">
            <label for="chanteur">Chanteur</label>
            <input type="text" name="chanteur" id="chanteur" class="border">
            <input type="submit" value="Cherche">
        </form>
        <form method="post">
            <input type="submit" value="reset" class="border p-2">
        </form>
        {{ error.error }}
        {% for song in songs %}
            <div class="border w-1/2 m-3">
                <div class="flex justify-between"><p>{{ song.titre }}</p><p>sorti le {{ song.date }}</p><a href='/song/del/{{ song.id_chanson }}'>supprimer</a></div>
                <p>Chanteur : {{ song.nom_chanteur }}</p>
                <p>Cat√©gorie : {{ song.libelle_categorie }}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
